<!-- Home -->
<div data-role="page">
	<div data-theme="b" data-role="header"  data-position="fixed">
		<div id="header-custom">
			<h3 >Chattr</h3>
			<p id="user" class="pull-right">
				Your handle: <span id="my-handle"><%- displayName %></span>
			</p>
			<p id="tagline">Tap into the conversations around you.</p>
			<p id="live-status">
				<b id="peopleAroundMe">23</b> people having conversations within 50 ft
			</p>
			<p id="conversation-name" data-conversation-name="<%- conversationName %>">This is a conversation room!  The topic is: <%- conversationName %></p>
		</div>
	</div>
	<div data-role="content" style="padding: 15px">
		<ul id="chat-feed" data-role="listview" data-divider-theme="b" data-inset="false">
			<li data-theme="c">
				<span class="name">Bob</span>
				<span class="message">
					This is a mock chat
				</span>
			</li>
			<li data-theme="c">
				<span class="name">Alex</span>
				<span class="message">
					Type your own...
				</span>
			</li>
		</ul>
	</div>
	<div data-role="footer" class="ui-bar chat-box" data-position="fixed">
		<a href="javascript:void(0);" data-role="button" data-mini="true" data-theme="b" id="send-chat">Send</a>
		<div id="chat-input-wrapper">
			<input id="chat-input" type="text" data-mini="true" />
		</div>
	</div>

	<div data-theme="a" data-role="footer" class="ui-bar" data-position="fixed">
					<a href="/home" data-role="button" >Leave conversation</a>
					<a href="javascript:void(0);" data-role="button" >See all conversations</a>
			</ul>
		</div>
	</div>
</div>